<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DZ_4._5.RemoveItemPage"
             Title="Видалення товару"
             Padding="10, 10, 10, 10">
    <StackLayout>

        <Picker Title="Виберіть тип товару" FontAttributes="Italic,Bold" FontFamily="Georgia" TitleColor="MediumPurple" FontSize="Subtitle" x:Name="ItemTypePicker">
            <Picker.Items>
                <x:String>Продукт</x:String>
                <x:String>Книга</x:String>
            </Picker.Items>
        </Picker>

        <Picker Title="Оберіть товар для видалення" FontAttributes="Italic,Bold" FontFamily="Georgia" TitleColor="MediumPurple" FontSize="Subtitle" x:Name="ItemPicker" />

        <Button Text="Видалити" FontFamily="Impact" FontSize="Medium" TextColor="Black" BackgroundColor="Red" Clicked="RemoveButton_Clicked" />
    </StackLayout>
</ContentPage>